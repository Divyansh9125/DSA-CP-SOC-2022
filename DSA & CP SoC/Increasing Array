#include <iostream>
 
using namespace std;
 
int main()
{
 long int i;
 long int count;
 long int n;
 cin>>n;
 long int arr[n];
 count=0;
 for(i=0; i<n; i++){
    cin>>arr[i];
    }
 for(i=1; i<n; i++){
    while(arr[i]<arr[i-1])
    {
        arr[i]+=1;
        count++;
    }
    
 }
 cout<<count;
    }